# TeamFlowApp.spec

# -*- mode: python ; coding: utf-8 -*-

a = Analysis(
    ['main.py'],
    pathex=[],
    binaries=[],
    datas=[],
    # ZMIANA: Dodajemy "ukryte" importy, których PyInstaller może nie znaleźć sam
    hiddenimports=['pyodbc', 'PySide6.QtSql', 'matplotlib.backends.backend_qtagg'],
    hookspath=[],
    hooksconfig={},
    runtime_hooks=[],
    excludes=[],
    noarchive=False,
)
pyz = PYZ(a.pure)

exe = EXE(
    pyz,
    a.scripts,
    a.binaries,
    a.zipfiles,
    a.datas,
    [],
    name='TeamFlowApp',
    debug=False,
    bootloader_ignore_signals=False,
    strip=False,
    upx=True,  # Kompresja pliku EXE (można ustawić na False)
    upx_exclude=[],
    runtime_tmpdir=None,
    # ZMIANA: Ustawienie trybu jednego pliku oraz dodanie ikony
    onefile=False,
    windowed=True,
    icon=False, # Upewnij się, że plik ikony jest w tym samym katalogu
    console=False,   # Zapewnia brak konsoli (alternatywa dla windowed=True)
)

@echo off
echo Kopiowanie plikow aplikacji na dysk lokalny, prosze czekac...

:: Ustawia sciezke do folderu tymczasowego uzytkownika
set "LOCAL_APP_PATH=%TEMP%\TeamFlowApp"

:: Kopiuje caly folder aplikacji z dysku sieciowego na dysk lokalny (tylko jesli sa zmiany)
xcopy /s /e /d /y "%~dp0" "%LOCAL_APP_PATH%\"

echo Uruchamianie aplikacji...

:: Uruchamia aplikacje z lokalnej kopii
start "" "%LOCAL_APP_PATH%\TeamFlowApp.exe"

exit
