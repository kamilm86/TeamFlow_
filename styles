    @staticmethod
    def get_tab_widget_style(theme="dark"):
        main_bg = AppStyles.DARK_BACKGROUND_MAIN if theme == "dark" else AppStyles.LIGHT_BACKGROUND_MAIN
        control_bg = AppStyles.DARK_BACKGROUND_CONTROLS if theme == "dark" else AppStyles.LIGHT_BACKGROUND_CONTROLS
        text_color = AppStyles.DARK_TEXT_PRIMARY if theme == "dark" else AppStyles.LIGHT_TEXT_PRIMARY
        border_color = AppStyles.DARK_BORDER_SECONDARY if theme == "dark" else AppStyles.LIGHT_BORDER_PRIMARY
        accent_color = AppStyles.ACCENT_COLOR_DARK if theme == "dark" else AppStyles.ACCENT_COLOR_LIGHT
        tab_bar_bg = control_bg if theme == "dark" else AppStyles.LIGHT_BACKGROUND_HOVER
        tab_pane_bg = control_bg

        return f"""
                QTabWidget::pane {{
                    border: 1px solid {border_color};
                    border-top: none;
                    background-color: {tab_pane_bg};
                    border-bottom-left-radius: {AppStyles.BORDER_RADIUS};
                    border-bottom-right-radius: {AppStyles.BORDER_RADIUS};
                }}
                QTabBar::tab {{
                    background-color: {tab_bar_bg};
                    color: {text_color};
                    border: 1px solid {border_color};
                    border-bottom: none; 
                    padding: 6px 12px;
                    margin-right: 2px;
                    border-top-left-radius: {AppStyles.BORDER_RADIUS};
                    border-top-right-radius: {AppStyles.BORDER_RADIUS};
                }}
                QTabBar::tab:selected {{
                    background-color: {accent_color};
                    color: {'white' if theme == "dark" else 'white'};
                }}
                QTabBar::tab:!selected:hover {{
                    background-color: {AppStyles.DARK_BACKGROUND_HOVER if theme == "dark" else AppStyles.LIGHT_BACKGROUND_HOVER};
                }}
            """

    @staticmethod
    def get_alert_button_style(theme="dark", font_family="Segoe UI", font_size=9):
        """
        Zwraca styl dla przycisku w stanie "alertu" (np. nowe dane).
        Jest to styl bazowy z charakterystycznym kolorem tła.
        """
        # Kolory dla obu motywów
        bg_color = "#f39c12"  # Pomarańczowy
        text_color = "white"
        border_color = "#e67e22"  # Ciemniejszy pomarańczowy
        hover_bg = "#e67e22"
        pressed_bg = "#d35400"  # Jeszcze ciemniejszy pomarańczowy

        return f"""
            QPushButton {{
                    background-color: {bg_color};
                    color: {text_color};
                    border: 1px solid {border_color};
                    padding: {AppStyles.BUTTON_PADDING};
                    border-radius: {AppStyles.BORDER_RADIUS};
                    font-family: '{font_family}';
                    font-size: {font_size}pt;
                    font-weight: bold;
                }}
                QPushButton:hover {{
                    background-color: {hover_bg};
                }}
                QPushButton:pressed {{
                    background-color: {pressed_bg};
                }}
            """

    @staticmethod
    def get_icon_button_style(theme="dark"):
        """
        Zwraca styl dla "płaskich" przycisków z ikonami, które podświetlają się po najechaniu.
        """
        if theme == "dark":
            bg_color = "transparent"
            border_color = "transparent"
            hover_bg = AppStyles.DARK_BACKGROUND_HOVER
            pressed_bg = AppStyles.DARK_BACKGROUND_PRESSED
        else:
            bg_color = "transparent"
            border_color = "transparent"
            hover_bg = AppStyles.LIGHT_BACKGROUND_HOVER
            pressed_bg = AppStyles.LIGHT_BACKGROUND_PRESSED

        return f"""
        QPushButton {{
                background-color: {bg_color};
                border: 1px solid {border_color};
                padding: 4px;
                border-radius: {AppStyles.BORDER_RADIUS};
            }}
            QPushButton:hover {{
                background-color: {hover_bg};
            }}
            QPushButton:pressed {{
                background-color: {pressed_bg};
            }}
            QPushButton:disabled {{
                background-color: transparent;
            }}
        """

    @staticmethod
    def get_notification_drawer_style(theme="dark"):
        """Zwraca styl dla głównego kontenera powiadomień."""
        if theme == "dark":
            bg_color = "#202225"
            border_color = "#18191c"
            header_bg = "#292b2f"
            text_color = "white"
            scrollbar_bg = "#202225"
            scrollbar_handle = "#40444b"
        else:  # Light theme
            bg_color = "#f8f9fa"      # Jasne tło
            border_color = "#dee2e6"  # Szara ramka
            header_bg = "#e9ecef"     # Nieco ciemniejszy nagłówek
            text_color = "#212529"    # Ciemny tekst
            scrollbar_bg = "#f1f1f1"
            scrollbar_handle = "#c1c1c1"

        return f"""
            QWidget#Drawer {{ background-color: {bg_color}; border-left: 1px solid {border_color}; }}
            QFrame#Header {{ background-color: {header_bg}; border-bottom: 1px solid {border_color}; }}
            QLabel {{ color: {text_color}; }}
            QScrollArea {{ border: none; background: transparent; }}
            QScrollBar:vertical {{ width: 6px; background: {scrollbar_bg}; }}
            QScrollBar::handle:vertical {{ background: {scrollbar_handle}; border-radius: 3px; }}
        """

    @staticmethod
    def get_notification_item_style(theme="dark", border_color="#3498db"):
        """Zwraca styl dla pojedynczego kafelka powiadomienia."""
        if theme == "dark":
            bg_color = "#2f3136"
            title_color = "white"
            msg_color = "#b9bbbe"
            time_color = "#72767d"
            close_color = "#72767d"
            close_hover = "#dcddde"
        else:  # Light theme
            bg_color = "#ffffff"
            title_color = "#212529"   # Prawie czarny
            msg_color = "#495057"     # Ciemnoszary
            time_color = "#868e96"    # Szary
            close_color = "#adb5bd"
            close_hover = "#495057"

        return f"""
            QFrame#NotifItem {{
                background-color: {bg_color}; 
                border-radius: 4px;
                border-left: 3px solid {border_color};
                /* Subtelny cień w CSS Qt jest trudny, używamy borderu dla separacji w light mode */
                border-right: 1px solid {bg_color if theme == 'dark' else '#dee2e6'};
                border-top: 1px solid {bg_color if theme == 'dark' else '#dee2e6'};
                border-bottom: 1px solid {bg_color if theme == 'dark' else '#dee2e6'};
            }}
            QLabel {{ border: none; background: transparent; }}
            QLabel#Title {{ font-weight: bold; font-size: 9pt; color: {title_color}; }}
            QLabel#Msg {{ font-size: 8pt; color: {msg_color}; }}
            QLabel#Time {{ font-size: 7pt; color: {time_color}; }}
            QPushButton#CloseBtn {{ 
                border: none; background: transparent; color: {close_color}; font-weight: bold; 
            }}
            QPushButton#CloseBtn:hover {{ color: {close_hover}; }}
        """
